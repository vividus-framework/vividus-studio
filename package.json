{
    "name": "vividus-studio",
    "displayName": "vividus-studio",
    "description": "Vividus extendsion for Visual Studio Code",
    "version": "0.0.1",
    "publisher": "vividus-framework",
    "license": "Apache-2.0",
    "engines": {
        "vscode": "^1.57.0"
    },
    "categories": [],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "vividus-dsl",
                "aliases": [
                    "bdd",
                    "jbehave",
                    "dsl"
                ],
                "extensions": [
                    ".story",
                    ".steps"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "vividus-dsl",
                "scopeName": "source.vividus",
                "path": "./syntaxes/vividus.tmLanguage.json"
            }
        ],
        "themes": [
            {
                "label": "vividus-dark-theme",
                "uiTheme": "vs-dark",
                "path": "./themes/vividus.tmTheme.json"
            }
        ],
        "commands": []
    },
    "scripts": {
        "lint": "tslint --project tsconfig.json --config tslint.json",
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.4",
        "@types/mocha": "^5.2.7",
        "@types/node": "^12.11.7",
        "@types/vscode": "^1.59.0",
        "glob": "^7.1.7",
        "mocha": "^7.2.0",
        "tslint": "^6.1.3",
        "typescript": "^3.6.4",
        "vscode-test": "^1.6.1"
    },
    "dependencies": {
        "vscode-languageclient": "^7.0.0"
    }
}
