{
    "name": "vividus-studio",
    "displayName": "vividus-studio",
    "description": "Vividus extendsion for Visual Studio Code",
    "version": "0.0.1",
    "publisher": "vividus-framework",
    "repository": {
        "type": "git",
        "url": "https://github.com/vividus-framework/vividus-studio.git"
    },
    "license": "Apache-2.0",
    "engines": {
        "vscode": "^1.67.0"
    },
    "categories": [],
    "activationEvents": [
        "workspaceContains:**/*.story",
        "workspaceContains:**/*.steps"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "vividus-dsl",
                "aliases": [
                    "bdd",
                    "jbehave",
                    "dsl"
                ],
                "extensions": [
                    ".story",
                    ".steps"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "vividus-log",
                "mimetypes": [
                    "log",
                    "text/log",
                    "text/x-log",
                    "text/x-code-output",
                    "x-code-output"
                ]
            }
        ],
        "grammars": [
            {
                "language": "vividus-dsl",
                "scopeName": "source.vividus",
                "path": "./syntaxes/vividus.tmLanguage.json"
            },
            {
                "language": "vividus-log",
                "scopeName": "source.vividus.log",
                "path": "./syntaxes/vividus.log.tmLanguage.json"
            }
        ],
        "themes": [
            {
                "label": "vividus-dark-theme",
                "uiTheme": "vs-dark",
                "path": "./themes/vividus.tmTheme.json"
            }
        ],
        "commands": [
            {
                "command": "vividus.runStories",
                "title": "Vividus: Run Stories"
            }
        ]
    },
    "scripts": {
        "lint": "tslint --project tsconfig.json --config tslint.json",
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.4",
        "@types/mocha": "^9.1.1",
        "@types/node": "^17.0.32",
        "@types/vscode": "^1.67.0",
        "glob": "^7.2.0",
        "mocha": "^10.0.0",
        "tslint": "^6.1.3",
        "typescript": "^4.4.3",
        "vscode-test": "^1.6.1"
    },
    "dependencies": {
        "vscode-languageclient": "^7.0.0",
        "glob": "^7.2.0"
    }
}
