{
    "name": "vividus-studio",
    "displayName": "VIVIDUS Studio",
    "description": "VIVIDUS extension for Visual Studio Code",
    "version": "0.0.1",
    "publisher": "vividus",
    "icon": "images/icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/vividus-framework/vividus-studio.git"
    },
    "license": "Apache-2.0",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [],
    "activationEvents": [
        "workspaceContains:**/*.story",
        "workspaceContains:**/*.steps"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "vividus-dsl",
                "aliases": [
                    "bdd",
                    "jbehave",
                    "dsl"
                ],
                "extensions": [
                    ".story",
                    ".steps"
                ],
                "configuration": "./language-configuration.json",
                "icon": {
                    "dark": "./images/icon.png",
                    "light": "./images/icon.png"
                }
            },
            {
                "id": "vividus-log",
                "mimetypes": [
                    "log",
                    "text/log",
                    "text/x-log",
                    "text/x-code-output",
                    "x-code-output"
                ]
            }
        ],
        "grammars": [
            {
                "language": "vividus-dsl",
                "scopeName": "source.vividus",
                "path": "./syntaxes/vividus.tmLanguage.json"
            },
            {
                "language": "vividus-log",
                "scopeName": "source.vividus.log",
                "path": "./syntaxes/vividus.log.tmLanguage.json"
            }
        ],
        "configuration":[
            {
                "title": "VIVIDUS Studio",
                "properties": {
                    "vividus-studio.java-home": {
                        "type": [
                            "string",
                            "null"
                        ],
                        "default": null,
                        "description": "The directory path containing JDK to run the extension"
                    }
                }
            }
        ],
        "configurationDefaults": {
            "editor.semanticHighlighting.enabled": true,
            "editor.semanticTokenColorCustomizations": {
                "rules": {
                    "vividus-step-argument": {
                        "foreground": "#b3b306",
                        "fontStyle": "bold"
                    }
                }
            },
            "editor.tokenColorCustomizations": {
                "textMateRules": [
                    {
                        "scope": "vividus.scenario.keyword",
                        "settings": {
                            "fontStyle": "bold",
                            "foreground": "#00f3ef"
                        }
                    },
                    {
                        "scope": "vividus.scenario.title",
                        "settings": {
                            "foreground": "#94d6fc"
                        }
                    },
                    {
                        "scope": "vividus.comment",
                        "settings": {
                            "foreground": "#1eff008e",
                            "fontStyle": "italic"
                        }
                    },
                    {
                        "scope": "vividus.meta",
                        "settings": {
                            "foreground": "#ffe600",
                            "fontStyle": "bold"
                        }
                    },
                    {
                        "scope": "vividus.meta.key",
                        "settings": {
                            "foreground": "#d6c316",
                            "fontStyle": "italic"
                        }
                    },
                    {
                        "scope": "vividus.meta.value",
                        "settings": {
                            "foreground": "#ff0095",
                            "fontStyle": "italic"
                        }
                    },
                    {
                        "scope": "vividus.step.type",
                        "settings": {
                            "foreground": "#12b6b3",
                            "fontStyle": "bold"
                        }
                    },
                    {
                        "scope": "vividus.step.wording",
                        "settings": {
                            "foreground": "#c47332f6"
                        }
                    },
                    {
                        "scope": [
                            "vividus.keyword"
                        ],
                        "settings": {
                            "fontStyle": "bold",
                            "foreground": "#a37be1"
                        }
                    },
                    {
                        "scope": [
                            "vividus.keyword.attribute"
                        ],
                        "settings": {
                            "fontStyle": "italic",
                            "foreground": "#a8b9fb"
                        }
                    },
                    {
                        "scope": [
                            "vividus.log.time"
                        ],
                        "settings": {
                            "foreground": "#666f76"
                        }
                    },
                    {
                        "scope": [
                            "vividus.log.thread"
                        ],
                        "settings": {
                            "foreground": "#3a86c3"
                        }
                    },
                    {
                        "scope": [
                            "vividus.log.level.info"
                        ],
                        "settings": {
                            "foreground": "#30a815"
                        }
                    },
                    {
                        "scope": [
                            "vividus.log.level.error"
                        ],
                        "settings": {
                            "foreground": "#c50f09"
                        }
                    },
                    {
                        "scope": [
                            "vividus.log.level.debug"
                        ],
                        "settings": {
                            "foreground": "#1ab288"
                        }
                    },
                    {
                        "scope": [
                            "vividus.log.class"
                        ],
                        "settings": {
                            "foreground": "#ddc728"
                        }
                    },
                    {
                        "scope": [
                            "vividus.log.message"
                        ],
                        "settings": {
                            "foreground": "#d4dbdd"
                        }
                    }
                ]
            }
        },
        "commands": [
            {
                "command": "vividus.runStories",
                "title": "VIVIDUS: Run Stories"
            }
        ]
    },
    "scripts": {
        "lint": "tslint --project tsconfig.json --config tslint.json",
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^8.0.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "^18.11.18",
        "@types/sinon": "^10.0.13",
        "@types/vscode": "^1.74.0",
        "sinon": "^15.0.1",
        "mocha": "^10.2.0",
        "tslint": "^6.1.3",
        "typescript": "^4.9.4",
        "vscode-test": "^1.6.1"
    },
    "dependencies": {
        "glob": "^8.0.3",
        "jdk-utils": "^0.4.4",
        "vscode-languageclient": "^8.0.2"
    }
}
